{% block html_head_container %}
	{% block head %}
		{% include 'html-header.twig' %}
	{% endblock %}
{% endblock %}

	<body class="{{ body_class }}" data-template="base.twig">	
		<a href="{{ site.url }}" id="BracesLinks" class="braces braces-links" rel="home" aria-label="Link to home" class="braces braces-rechts">
			<div>
				{% for i in 0..30 %}
					{{ options.braces_tekst }}
				{% endfor %}
			</div>
		</a>
		
		<a href="{{ site.url }}" id="BracesRechts" rel="home" aria-label="Link to home" class="braces braces-rechts">
			<div>
				{% for i in 0..30 %}
					{{ options.braces_tekst }}
				{% endfor %}
			</div>
		</a>
		
		{% include 'mobilemenu.twig' %}
		
		{% block header %}
			{% include 'header.twig' %}
		{% endblock %}
		
		<main>
			{% if post.title %}
				<h1 class="d-none">{{ post.title }}</h1>
			{% endif %}
			{% block content %}
				Sorry, no content
			{% endblock %}
		</main>
		
		{% block footer %}
			{% include 'footer.twig' %}
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
