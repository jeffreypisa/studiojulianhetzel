{% extends "base.twig" %}

{% block content %}
	<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
		<div class="container-fluid">
			<h2 class="h1"> {{ post.title }} </h2>
			<div id="theposts" class="upcoming">
				{% for item in upcoming %}
					{% include ['tease-agenda-row.twig'] %}
				{% endfor %}
			</div>
			<div id="theposts" class="past muted">
				{% for item in past %}
					{% include ['tease-agenda-row.twig'] %}
				{% endfor %}
			</div>
		</div>
	</article>
{% endblock %}