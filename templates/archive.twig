{# This file demonstrates using most of the index.twig template and modifying 
   just a small part. See `search.twig` for an example of another approach #}

{% extends "base.twig" %}

{% block content %}
    <article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
        <section class="mod-archive bg-white">
            <div class="container-fluid">
               <h2 class="h1"> {{ title|capitalize }} </h2>
               <div class="line"></div>     
               <div id="theposts" class="row pt-2">
                  {% for item in posts %}
                      <div class="col-md-6">
                          {% include ['tease.twig'] %}
                      </div>
                  {% endfor %}
               </div>  
            </div>
        </section>
    </article>
{% endblock %}